{
  "name": "gateway-language-translation-suite-prototype",
  "homepage": "https://glts.netlify.com/",
  "scripts": {
    "styleguide": "styleguidist server",
    "styleguide:build": "styleguidist build && mv styleguide build",
    "start": "rescripts start",
    "build": "rescripts build && yarn styleguide:build",
    "deploy": "git push",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "test:cov": "yarn cypress:run && nyc report --reporter=json-summary --reporter=text-summary",
    "test:unit": "jest __tests__ && cat ./coverage/lcov.info | coveralls",
    "test": "start-test 3000 test:cov",
    "create-coverage-badge": "bash scripts/create-badge-json.sh"
  },
  "version": "0.9.0-alpha.26",
  "license": "MIT",
  "private": false,
  "bugs": {
    "url": "https://github.com/unfoldingWord/gateway-language-translation-suite-prototype/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/unfoldingWord/gateway-language-translation-suite-prototype"
  },
  "dependencies": {
    "@material-ui/core": "^4.7.2",
    "@material-ui/icons": "^4.5.1",
    "@material-ui/lab": "^4.0.0-alpha.35",
    "@material-ui/styles": "^4.7.1",
    "axios": "^0.19.0",
    "datatable-translatable": "^0.7.0",
    "deep-freeze": "^0.0.1",
    "gitea-react-toolkit": "^0.6.10",
    "markdown-translatable": "^0.10.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-headroom": "^3.0.0",
    "react-select": "^3.0.4",
    "react-waypoint": "^9.0.2",
    "scripture-resources-rcl": "^0.12.5",
    "usfm-js": "^2.0.2"
  },
  "devDependencies": {
    "@cypress/code-coverage": "1.10.4",
    "@rescripts/cli": "^0.0.13",
    "@rescripts/rescript-env": "^0.0.11",
    "@types/cypress": "1.1.3",
    "@types/jest": "24.0.22",
    "@unfoldingword/eslint-config": "^1.0.11",
    "babel-loader": "8.0.5",
    "babel-plugin-istanbul": "5.2.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "coveralls": "^3.0.9",
    "css-loader": "^3.2.0",
    "cypress": "^3.6.1",
    "eslint-plugin-chai-friendly": "0.5.0",
    "eslint-plugin-cypress": "2.7.0",
    "eslint-plugin-react": "7.12.4",
    "file-loader": "^4.2.0",
    "istanbul-lib-coverage": "2.0.5",
    "lodash": "^4.17.11",
    "nyc": "14.1.1",
    "react-scripts": "3.0.1",
    "react-styleguidist": "10.4.0",
    "start-server-and-test": "^1.10.6",
    "style-loader": "^1.0.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "rescripts": [
    "env"
  ],
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "nyc": {
    "excludeAfterRemap": false,
    "exclude": [
      "**/*.spec.js"
    ],
    "include": [
      "**/components/**/**.js",
      "**/components/**.js"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/core/**.{js,jsx,ts}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ]
  }
}